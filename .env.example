# Environment Variables

# Application
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000
API_PREFIX=api

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=newsroom
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/newsroom

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_change_this_too
JWT_REFRESH_EXPIRATION=30d

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_NAME=NewsRoom
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@newsroom.com

# Admin User
ADMIN_EMAIL=admin@newsroom.com
ADMIN_PASSWORD=Admin123!
